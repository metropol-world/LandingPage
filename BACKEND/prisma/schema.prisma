generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model email_submissions {
  id         Int   @id @default(autoincrement())
  email      String   @unique(map: "uq_email") @db.VarChar(255)
  created_at DateTime @default(now()) @db.Timestamptz(6)
  user_agent String?
  ip         String?  @db.Inet
}
